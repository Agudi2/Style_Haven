<%- include('../partials/header.ejs') %>
<main class="max-w-4xl mx-auto p-6">
    <div class="item-detail grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="item-image">
            <img src="<%= item.image %>" alt="<%= item.title %>" class="w-full max-h-80 object-cover rounded-md shadow-md">
        </div>
        <div class="item-info">
            <h2 class="text-2xl font-bold text-gray-800 mb-4"><%= item.title %></h2>
            <p class="text-lg text-gray-700 mb-2">Condition: <%= item.condition %></p>
            <p class="text-lg text-gray-700 mb-2">Price: $<%= item.price %></p>
            <p class="text-lg text-gray-700 mb-2">Total Offers: <%= item.totalOffers %></p>
            <p class="text-lg text-gray-700 mb-2">Highest Offer: $<%= item.highestOffer %></p>
            <p class="text-lg text-gray-700">Seller: <%= item.seller.firstName %> <%= item.seller.lastName %></p>

            <% if (session.user && !item.seller.equals(session.user._id)) { %>
            <form action="/cloth/<%= item._id %>/offers" method="POST" class="mt-6">
                <div class="form-group">
                    <label for="amount" class="block text-sm font-medium text-gray-700">Your Offer:</label>
                    <input type="number" id="amount" name="amount" step="0.01" min="0.01" class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" required>
                </div>
                <button type="submit" class="mt-4 py-2 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Make an Offer</button>
            </form>
            <% } %>
        </div>
    </div>
</main>
<%- include('../partials/footer.ejs') %>
