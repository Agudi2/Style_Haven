<%- include('../partials/header.ejs') %>
<main class="max-w-4xl mx-auto p-6">
    <div class="item-detail grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="item-image">
            <img src="<%= item.image %>" alt="<%= item.title %>" class="w-full max-h-80 object-cover rounded-md shadow-md">
        </div>
        <div class="item-info">
            <h2 class="text-2xl font-bold text-gray-800 mb-4"><%= item.title %></h2>
            <p class="text-lg text-gray-700 mb-2">Condition: <%= item.condition %></p>
            <p class="text-lg text-gray-700 mb-2">Price: $<%= item.price %></p>
            <p class="text-lg text-gray-700 mb-2">Total Offers: 5</p>
            <p class="text-lg text-gray-700">Seller: <%= item.seller.firstName %> <%= item.seller.lastName %></p>
        </div>
    </div>
</main>
<%- include('../partials/footer.ejs') %>
