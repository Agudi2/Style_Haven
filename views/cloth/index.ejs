<%- include('../partials/header') %>
<main class="container mx-auto p-6">
    <form action="/cloth" method="GET" class="mb-6">
        <div class="flex items-center">
            <input type="text" name="search" class="flex-1 p-2 border border-gray-300 rounded-l-md focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Search items">
            <button type="submit" class="p-2 bg-indigo-600 text-white rounded-r-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">Search</button>
        </div>
    </form>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% items.forEach(item => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col">
                <a href="/cloth/<%= item.id %>">
                    <img src="<%= item.image %>" class="w-full h-48 object-cover" alt="<%= item.title %>">
                    <div class="p-4 flex-1 flex flex-col">
                        <h5 class="text-xl font-semibold text-gray-800 mb-2"><%= item.title %></h5>
                        <p class="text-gray-600 mb-1">Condition: <%= item.condition %></p>
                        <p class="text-gray-600 mb-1">Price: $<%= item.price %></p>
                        <p class="text-gray-600 mb-4">Total Offers: <%= item.totalOffers %></p>
                    </div>
                </a>
            </div>
        <% }); %>
    </div>
</main>

<%- include('../partials/footer') %>
